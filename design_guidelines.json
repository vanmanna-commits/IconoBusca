{
  "design_system": {
    "identity": {
      "name": "E1 - The Anti-AI Designer",
      "tone": "Elegant, Minimalist, Sophisticated, Gallery-like",
      "principles": [
        "Fusion over Imitation: Swiss Poster meets Digital Product",
        "Emotion First: Calm, Clarity, Focus",
        "Content is King: The UI recedes, the images shine",
        "Negative Space: Luxurious margins",
        "Contrast: Sharp typography against soft backgrounds"
      ]
    },
    "typography": {
      "font_family": {
        "headings": "Playfair Display, serif",
        "body": "Manrope, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "scale": {
        "h1": "text-5xl md:text-7xl font-medium tracking-tight leading-tight",
        "h2": "text-4xl md:text-5xl font-normal tracking-tight",
        "h3": "text-2xl md:text-3xl font-normal",
        "body_lg": "text-lg md:text-xl leading-relaxed font-light",
        "body_base": "text-base leading-relaxed text-muted-foreground",
        "caption": "text-xs tracking-widest uppercase font-semibold text-muted-foreground/70"
      },
      "imports": [
        "https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Manrope:wght@300;400;500;600&display=swap"
      ]
    },
    "colors": {
      "palette": {
        "background": "#FFFFFF",
        "foreground": "#1A1A1A",
        "primary": "#1A1A1A",
        "primary_foreground": "#FFFFFF",
        "secondary": "#F4F4F5",
        "secondary_foreground": "#18181B",
        "muted": "#F4F4F5",
        "muted_foreground": "#71717A",
        "accent": "#FF4500",
        "accent_foreground": "#FFFFFF",
        "border": "#E4E4E7",
        "input": "#E4E4E7",
        "ring": "#1A1A1A"
      },
      "usage": {
        "body_bg": "bg-white",
        "text_main": "text-zinc-900",
        "text_muted": "text-zinc-500",
        "action_color": "bg-zinc-900 hover:bg-zinc-800 text-white",
        "accent_highlight": "text-[#FF4500]"
      }
    },
    "spacing": {
      "container": "max-w-7xl mx-auto px-6 md:px-12",
      "section_padding": "py-20 md:py-32",
      "grid_gap": "gap-8 md:gap-12",
      "element_spacing": "space-y-6"
    },
    "layout": {
      "grid_system": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8",
      "masonry_mode": "columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8",
      "header_height": "h-20"
    },
    "components": {
      "buttons": {
        "style": "rounded-full px-8 py-6 text-sm font-medium transition-all duration-300",
        "primary": "bg-primary text-primary-foreground hover:scale-105 hover:shadow-xl",
        "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
        "ghost": "hover:bg-accent/10 hover:text-accent"
      },
      "inputs": {
        "search_bar": "h-16 text-lg bg-transparent border-b-2 border-zinc-200 focus:border-zinc-900 focus:ring-0 px-0 rounded-none placeholder:text-zinc-300 transition-colors"
      },
      "cards": {
        "image_card": "group relative overflow-hidden rounded-none bg-zinc-50 transition-all duration-500 hover:shadow-2xl",
        "overlay": "absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300"
      }
    },
    "visual_enhancers": {
      "shadows": {
        "soft": "shadow-[0_8px_30px_rgb(0,0,0,0.04)]",
        "hover": "shadow-[0_8px_30px_rgb(0,0,0,0.12)]"
      },
      "borders": "border border-zinc-100",
      "glass": "backdrop-blur-md bg-white/80 border-b border-white/20"
    },
    "motion": {
      "transition_base": "transition-all duration-300 ease-out",
      "hover_lift": "hover:-translate-y-1",
      "fade_in": "animate-in fade-in duration-700 slide-in-from-bottom-4"
    }
  },
