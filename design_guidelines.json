  "instructions_to_main_agent": {
    "general": [
      "IMPLEMENT LIGHT MODE ONLY. Do not use dark mode classes.",
      "Use 'Playfair Display' for all Headings (h1, h2, h3). Use 'Manrope' for body text.",
      "The Search Bar must be the HERO of the page. Make it large, centered, and elegant.",
      "Use 'Masonry' layout for the image grid. If true masonry is hard with CSS grid, use 'columns-1 md:columns-3' CSS property.",
      "Do not use standard Shadcn cards. Create a custom 'ImageCard' that is minimal (no border, just image + hover overlay).",
      "Ensure generous whitespace. Use 'py-20' or 'py-32' for section spacing.",
      "Add 'data-testid' to all interactive elements."
    ],
    "pages": {
      "home": {
        "structure": "Hero Section (Large Title + Search) -> Filters (Horizontal, Minimal) -> Image Grid -> Pagination/Load More",
        "hero_text": "Find the perfect image.",
        "hero_subtext": "Search across Unsplash, Pexels, and Pixabay simultaneously."
      },
      "modal": {
        "style": "Glassmorphism backdrop (backdrop-blur-xl bg-white/90). Clean typography. Large download button."
      }
    },
    "universal_guidelines": [
      "Avoid generic 'AI slop' designs. Be bold with whitespace.",
      "No gradients for backgrounds. Use pure white or very subtle off-white.",
      "Micro-interactions are mandatory (hover states, focus states).",
      "Use 'sonner' for toasts."
    ]
  }
